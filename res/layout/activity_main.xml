<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.layout2.MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#05C3F9"
        android:scaleType="fitXY"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center"
        android:text="What would you lik to train?"
        android:textColor="#0EC5F9" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="60dp"
        android:background="#C0C0C0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="#05C3F9"
        android:scaleType="fitXY"
        android:src="@drawable/featured" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="Articulate your thoughts more 
        clearly" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:background="#C0C0C0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView2"
        android:background="#C0C0C0"
        android:src="@drawable/abc_ic_menu_cut_mtrl_alpha" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/view2"
        android:layout_marginTop="24dp"
        android:background="#C0C0C0"
        android:src="@drawable/abc_ic_clear_mtrl_alpha" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="12dp"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view4"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/view3"
        
        android:layout_marginLeft="125dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:background="#0000ff" />

    <View
        android:id="@+id/view5"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/view3"
        android:layout_centerInParent="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view4"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view6"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/view3"
        android:layout_centerInParent="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view5"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view7"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/view3"
        android:layout_centerInParent="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view6"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view8"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/view3"
        android:layout_centerInParent="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view7"
        android:background="#C0C0C0" />

    <View
        android:id="@+id/view9"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/view3"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view8"
        android:layout_marginRight="10dp"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Skip"
        android:textColor="#05C3F9" />

</RelativeLayout>